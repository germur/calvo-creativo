---
import { Icon } from "astro-pure/user";

interface Crumb { name: string; url: string }
const { items } = Astro.props as { items: Crumb[] }
---
<nav aria-label="Breadcrumb" class="mb-4">
  <ol class="flex flex-wrap items-center gap-1 text-sm opacity-80">
    {items.map((c, i) => (
      <>
        {i > 0 && <Icon name="menu" class="size-3 opacity-50" />} 
        <li>
          <a href={c.url} class="hover:underline">{c.name}</a>
        </li>
      </>
    ))}
  </ol>
</nav>
