{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/assets/*": ["src/assets/*"],
      "@/components/*": ["src/components/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/plugins/*": ["src/plugins/*"],
      "@/pages/*": ["src/pages/*"],
      "@/site-config": ["src/site.config.ts"]
    }
  }
}
